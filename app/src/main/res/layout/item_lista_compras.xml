<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView android:id="@+id/imagemLista" android:layout_width="50dp" android:layout_height="50dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />

    <TextView android:id="@+id/tituloLista" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@id/imagemLista" app:layout_constraintEnd_toStartOf="@id/botaoEditar" app:layout_constraintTop_toTopOf="parent" />

    <Button android:id="@+id/botaoEditar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Editar" app:layout_constraintEnd_toStartOf="@id/botaoExcluir" app:layout_constraintTop_toTopOf="parent" />

    <Button android:id="@+id/botaoExcluir" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Excluir" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>